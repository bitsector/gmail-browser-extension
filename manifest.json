{
    "manifest_version": 3,
    "name": "Gmail Page Reader",
    "version": "1.0",
    "description": "Reads Gmail content directly from the webpage.",
    "permissions": ["scripting", "notifications"],
    "host_permissions": ["https://mail.google.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "favicon-16x16.png",
        "48": "favicon-32x32.png",
        "128": "favicon-32x32.png"
      }
    },
    "icons": {
      "16": "favicon-16x16.png",
      "48": "favicon-32x32.png",
      "128": "favicon-32x32.png"
    }
  }
  